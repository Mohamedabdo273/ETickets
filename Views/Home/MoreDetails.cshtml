@model Movie
<div class="row">
    <div class="col-12 mb-3">
       <a href="/Home/Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Back..</a>
    </div>
</div>
<div class="container-fluid">
    <div class="card mb-3 w-100">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/movies/@Model.ImgUrl" class="img-fluid rounded-start" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title" style="color:red">@Model.Name</h5>
                    <p>@Model.Description</p>
                    <p>Price: @Model.Price</p>
                    <p>Cinema: @Model.Cinema.Name</p>
                    <p>Start Date: @Model.StartDate</p>
                    <p>End Date: @Model.EndDate</p>
                    <p>Category: @Model.Category.Name</p>
                    @foreach(var actor in Model.Actors)
                    {
                        <a asp-action="Actor" asp-route-id="@actor.Actor.Id" ><img src="~/cast/@actor.Actor.ProfilePicture" class="img-fluid rounded-start"></a>
                    } 
                    <br />
                    <video width=50%" controls class="m-5">
                        <source src="@Model.TrailerUrl" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>
